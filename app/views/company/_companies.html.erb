<table class="pretty">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "symbol" %></th>
    <th><%= sortable "market_cap", "Market Cap" %></th>
  </tr>
  <% for company in @companies %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.symbol %></td>
        <td class="price"><%= number_to_currency(company.market_cap, :unit => "$") %></td>
      </tr>
  <% end %>
</table>